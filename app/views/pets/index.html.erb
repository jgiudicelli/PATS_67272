<h1>Listing pets</h1>

<table>
  <tr>
    <th>Animal</th>
    <th>Owner</th>
    <th>Name</th>
    <th>Female</th>
    <th>Date of birth</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pets.each do |pet| %>
  <tr>
    <td><%= pet.animal_id %></td>
    <td><%= pet.owner_id %></td>
    <td><%= pet.name %></td>
    <td><%= pet.female %></td>
    <td><%= pet.date_of_birth %></td>
    <td><%= pet.active %></td>
    <td><%= link_to 'Show', pet %></td>
    <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
    <td><%= link_to 'Destroy', pet, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

